@model IEnumerable<products_crud.ViewModels.ProductList>

<div class="container">
    <h1>Product List</h1>
    <div class="row">Filter by: <label>Category 
        <select asp-for="disponibleCategories">
</select></label></div>
    
    
    <div class="row">
    @foreach (var product in Model.productList) {
    <div class="col-md-4 col-lg-3 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h3 class="panel-title pull-left">@product.productName</h3>
                <a class="btn btn-default pull-right" href="#">
                    <i class="fa fa-check"></i> Button
                </a>
            </div>
            <div class="panel-body">
                <img class="card-img-top" src="@product.productImagePath" alt="Card image cap">
                <h4 class="pull-right">R$@product.productPrice.ToString("0.00")</h4>
            </div>

        </div>
    </div>
    }
    </div>
</div>